<Window x:Class="BPO_ex4.EditNodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Editor" Height="420" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="15">
        <StackPanel>
            <TextBlock Name="TxtTitle" Text="Edit Connection" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <GroupBox Header="Target (Where signal goes)" Margin="0,0,0,10" Padding="5">
                <StackPanel>
                    <TextBlock Name="LblTarget" Text="Target: AVTODO_AR[8]" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Logic Group: " Foreground="Gray"/>
                        <TextBlock Name="TxtGroupInfo" Text="5 (OR)" FontWeight="Bold"/>
                        <TextBlock Name="TxtModeInfo" Text=" [Editing Input]" Foreground="Blue" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Source (Where signal comes from)" Margin="0,0,0,15" Padding="5">
                <StackPanel>
                    <TextBlock Text="1. Select Category:" Margin="0,5,0,2" Foreground="#555"/>
                    <ComboBox Name="CmbCategory" SelectionChanged="CmbCategory_SelectionChanged"/>

                    <TextBlock Text="2. Select Variable Type:" Margin="0,10,0,2" Foreground="#555"/>
                    <ComboBox Name="CmbVariable" DisplayMemberPath="TypeName" SelectionChanged="CmbVariable_SelectionChanged"/>

                    <TextBlock Text="3. Select Instance (Index &amp; Description):" Margin="0,10,0,2" Foreground="#555"/>
                    <ComboBox Name="CmbIndex" IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="True">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Index}" FontWeight="Bold" Width="40"/>
                                    <TextBlock Text="{Binding Description}" Foreground="Gray" FontStyle="Italic"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="* Tip: Type a new number to create a new instance." FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel" IsCancel="True" Width="80" Height="30" Margin="0,0,10,0"/>
                <Button Content="Save to Excel" Click="BtnSave_Click" Width="120" Height="30" FontWeight="Bold" Background="#DDDDDD"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>