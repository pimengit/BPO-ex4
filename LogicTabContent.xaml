<UserControl x:Class="BPO_ex4.LogicTabContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BPO_ex4"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:ConstCheckConverter x:Key="ConstCheckConverter"/>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="10" Background="#F8F8F8" BorderBrush="#CCC" BorderThickness="0,0,0,1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Variable: " FontSize="14" Foreground="Gray"/>
                    <TextBlock Name="TxtNodeTitle" Text="NONE" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Name="TxtNodeValue" Text="FALSE" FontWeight="Bold" Foreground="Red" Margin="15,2,0,0"/>
                    <Button Name="BtnBack" Content="&lt; Back" Margin="20,0,0,0" Padding="5,2" Click="BtnBack_Click" IsEnabled="False"/>
                </StackPanel>
                <TextBlock Name="TxtNodeDesc" Text="..." Foreground="#555" Margin="0,2"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl Name="IcHeaders">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="110" BorderBrush="Gray" BorderThickness="0,0,1,1" Background="#EFEFEF" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding OperatorType}" FontSize="10" Foreground="Blue" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding GroupIndex, StringFormat='(Gr {0})'}" FontSize="9" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                                    <ItemsControl ItemsSource="{Binding Nodes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Margin="0,2" Height="24"
                                                        Tag="{Binding LogicNode}"
                                                        ToolTip="{Binding Description}"
                                                        PreviewMouseDown="BtnVar_MouseDown">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="White"/>
                                                            <Setter Property="BorderBrush" Value="#BBB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Value}" Value="True">
                                                                    <Setter Property="Background" Value="#90EE90"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Id, Converter={StaticResource ConstCheckConverter}}" Value="True">
                                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                                    <Setter Property="BorderThickness" Value="2"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>

                                                    <TextBlock Text="{Binding Id}" FontSize="11" FontWeight="SemiBold"/>

                                                    <Button.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Toggle Value (Изменить)" Click="CtxToggle_Click" Tag="{Binding LogicNode}"/>
                                                            <Separator/>
                                                            <MenuItem Header="Edit Connection... (Редактировать)" Click="CtxEdit_Click" Tag="{Binding LogicNode}"/>

                                                            <MenuItem Header="Add New to Group... (Добавить)" Click="CtxAdd_Click" 
                                  Tag="{Binding DataContext.GroupIndex, RelativeSource={RelativeSource AncestorType=Border}}"/>
                                                        </ContextMenu>
                                                    </Button.ContextMenu>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button Content="+" Height="20" Margin="0,5,0,0" FontWeight="Bold"
                                            Click="BtnAdd_Click" Tag="{Binding GroupIndex}"
                                            Visibility="{Binding CanAddInput, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl Name="IcRows">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Height="34">
                                <Grid>
                                    <Border Background="#DFF0D8" Opacity="0.6" Visibility="{Binding IsRowActive, Converter={StaticResource BoolToVis}}"/>
                                    <ItemsControl ItemsSource="{Binding Cells}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="110" BorderBrush="#EEE" BorderThickness="0,0,1,0">
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Text}" 
                                                                   HorizontalAlignment="Center" FontWeight="Bold" Foreground="#555"/>

                                                        <TextBlock Text="{Binding TimerInfo}" 
                                                                   FontSize="8" Foreground="Blue" 
                                                                   HorizontalAlignment="Center" 
                                                                   Visibility="{Binding TimerInfo, Converter={StaticResource BoolToVis}}"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>