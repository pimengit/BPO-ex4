<Window x:Class="BPO_ex4.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BPO_ex4"
        Title="Event Log" Height="500" Width="700">

    <Window.Resources>
        <local:StringContainsConverter x:Key="StringContainsConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#EEE" Padding="5" BorderBrush="#CCC" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold" Foreground="Gray"/>

                <TextBox x:Name="TxtFilter" Grid.Column="1" 
                         Padding="3" FontSize="14" 
                         TextChanged="TxtFilter_TextChanged"/>

                <Button Content="Clear" Grid.Column="2" Margin="5,0,0,0" Padding="5,2" Click="BtnClear_Click"/>
            </Grid>
        </Border>

        <ListBox x:Name="LstLog" Grid.Row="1" 
                 FontFamily="Consolas" FontSize="12"
                 BorderThickness="0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Converter={StaticResource StringContainsConverter}, ConverterParameter='MANUAL'}" Value="True">
                            <Setter Property="Foreground" Value="Blue"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource StringContainsConverter}, ConverterParameter='TIMER'}" Value="True">
                            <Setter Property="Foreground" Value="DarkGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource StringContainsConverter}, ConverterParameter='AUTO'}" Value="True">
                            <Setter Property="Foreground" Value="Gray"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource StringContainsConverter}, ConverterParameter='ERROR'}" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>