<Window x:Class="BPO_ex4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BPO_ex4" 
        Title="Logic Table Editor" Height="700" Width="1200">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <local:ConstCheckConverter x:Key="ConstCheckConverter"/>
    </Window.Resources>

 



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Name="BtnLoad" Content="Load Project" Click="BtnLoad_Click" Padding="5,2"/>
                <Button Name="BtnBack" Content="&lt; Back" Margin="5,0,0,0" Padding="5,2" Click="BtnBack_Click" IsEnabled="False"/>
            </StackPanel>

            <TextBox Name="TxtSearchType" Grid.Row="1" Margin="0,5" Padding="3" TextChanged="TxtSearchType_TextChanged"/>
            <ListBox Name="LstTypes" Grid.Row="2" SelectionChanged="LstTypes_SelectionChanged"/>
            <GridSplitter Grid.Row="3" HorizontalAlignment="Stretch"/>

            <ListBox Name="LstInstances" Grid.Row="4" SelectionChanged="LstInstances_SelectionChanged" BorderBrush="Gray">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Description}" Foreground="Gray" FontStyle="Italic" TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#DDD"/>

        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Padding="10" Background="#F8F8F8" Margin="0,0,0,10" BorderBrush="#CCC" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Variable: " FontSize="14" Foreground="Gray"/>
                        <TextBlock Name="TxtNodeTitle" Text="NONE" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Name="TxtNodeValue" Text="FALSE" FontWeight="Bold" Foreground="Red" Margin="15,2,0,0"/>
                    </StackPanel>
                    <TextBlock Name="TxtNodeDesc" Text="..." Foreground="#555" Margin="0,2"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <ItemsControl Name="IcHeaders">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="110" BorderBrush="Gray" BorderThickness="0,0,1,1" Background="#EFEFEF" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding OperatorType}" FontSize="10" Foreground="Blue" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding GroupIndex, StringFormat='(Gr {0})'}" FontSize="9" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                                        <ItemsControl ItemsSource="{Binding Nodes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>

                                                    <Button Margin="0,2" Height="24" 
                                                            Click="BtnVar_LeftClick" 
                                                            Tag="{Binding LogicNode}"
                                                            ToolTip="{Binding Description}">

                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Id}" FontSize="11" FontWeight="SemiBold"/>
                                                            </StackPanel>
                                                        </Button.Content>

                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Toggle Value (Set)" Click="CtxToggle_Click" Tag="{Binding LogicNode}"/>
                                                                <Separator/>
                                                                <MenuItem Header="Edit This Connection..." Click="CtxEdit_Click" Tag="{Binding LogicNode}"/>
                                                                <MenuItem Header="Add New to Group..." Click="CtxAdd_Click" 
                                                                          Tag="{Binding DataContext.GroupIndex, RelativeSource={RelativeSource AncestorType=Border}}"/>
                                                            </ContextMenu>
                                                        </Button.ContextMenu>

                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Background" Value="White"/>
                                                                <Setter Property="BorderBrush" Value="#BBB"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value}" Value="True">
                                                                        <Setter Property="Background" Value="#90EE90"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Id, Converter={StaticResource ConstCheckConverter}}" Value="True">
                                                                        <Setter Property="BorderBrush" Value="Black"/>
                                                                        <Setter Property="BorderThickness" Value="2"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>

                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <Button Content="+" Height="20" Margin="0,5,0,0" FontWeight="Bold"
                                                Click="BtnAdd_Click" Tag="{Binding GroupIndex}"
                                                Visibility="{Binding CanAddInput, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl Name="IcRows">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Height="30">
                                    <Grid>
                                        <Border Background="#DFF0D8" Opacity="0.6" Visibility="{Binding IsRowActive, Converter={StaticResource BoolToVis}}"/>

                                        <ItemsControl ItemsSource="{Binding Cells}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="110" BorderBrush="#EEE" BorderThickness="0,0,1,0">
                                                        <Grid>
                                                            <TextBlock Text="{Binding Text}" 
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                       FontWeight="Bold" Foreground="#555"/>

                                                            <TextBlock Text="NOT" Foreground="Red" FontWeight="Bold" FontSize="10" 
                                                                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2"
                                                                       Visibility="{Binding IsInverted, Converter={StaticResource BoolToVis}}"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>